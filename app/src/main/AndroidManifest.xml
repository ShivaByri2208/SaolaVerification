<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".SaolaVerificationApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/vnrvjiet"
        android:label="@string/app_name"
        android:roundIcon="@drawable/vnrvjiet"
        android:supportsRtl="true"
        android:theme="@style/Theme.SaolaVerification"
        tools:targetApi="tiramisu">
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".FacultyHomePageActivity"
            android:exported="false" />
        <activity
            android:name=".AdminHomePageActivity"
            android:exported="false" />
        <activity
            android:name=".FacultyLoginActivity"
            android:exported="false" />
        <activity
            android:name=".AdminLoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>